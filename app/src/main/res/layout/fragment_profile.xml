<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fillViewport="true"
    tools:context="com.capstone.gometry.ui.profile.ProfileFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            style="@style/TextHeading"
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:text="@string/user_profile"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_sign_out" />
        <ImageButton
            android:id="@+id/btn_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:elevation="2dp"
            android:padding="8dp"
            android:src="@drawable/ic_close"
            android:background="@drawable/button_image"
            android:contentDescription="@string/close"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            app:tint="@color/gray_800" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cl_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="32dp"
                    app:cardCornerRadius="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                        android:id="@+id/iv_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_white"
                        tools:src="@tools:sample/avatars"
                        tools:ignore="ContentDescription" />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextSubHeading"
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="24dp"
                    android:textColor="@color/gray_800"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_image"
                    tools:text="@tools:sample/full_names"/>
                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextSmall"
                    android:id="@+id/tv_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:textColor="@color/gray_800"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_name"
                    tools:text="@tools:sample/us_phones"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cl_total_point"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cl_total_medal"
                    app:layout_constraintTop_toBottomOf="@id/tv_email">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="10dp">
                        <com.google.android.material.textview.MaterialTextView
                            style="@style/TextSmallBold"
                            android:id="@+id/tv_label_total_point"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/label_total_point"
                            android:textColor="@color/purple_700"
                            android:textAlignment="center"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <com.google.android.material.textview.MaterialTextView
                            style="@style/TextLabel"
                            android:id="@+id/tv_total_point"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_800"
                            android:textAlignment="center"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_label_total_point"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:text="@tools:sample/us_zipcodes"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cl_total_medal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="24dp"
                    app:cardCornerRadius="4dp"
                    app:layout_constraintStart_toEndOf="@id/cl_total_point"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_email">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="10dp">
                        <com.google.android.material.textview.MaterialTextView
                            style="@style/TextSmallBold"
                            android:id="@+id/tv_label_total_medal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/label_total_medal"
                            android:textColor="@color/purple_700"
                            android:textAlignment="center"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <com.google.android.material.textview.MaterialTextView
                            style="@style/TextLabel"
                            android:id="@+id/tv_total_medal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_800"
                            android:textAlignment="center"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_label_total_medal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:text="@tools:sample/us_zipcodes"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.textview.MaterialTextView
                style="@style/TextLabel"
                android:id="@+id/tv_label_achievement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:text="@string/achievement"
                android:textColor="@color/gray_800"
                app:layout_constraintTop_toBottomOf="@id/cl_total_point"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_achievement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                app:layout_constraintTop_toBottomOf="@id/tv_label_achievement"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/card_achievement"
                tools:itemCount="3"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cl_empty_achievement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="24dp"
                android:visibility="invisible"
                app:cardCornerRadius="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_label_achievement"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <com.google.android.material.textview.MaterialTextView
                    style="@style/Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_achievement"
                    android:textColor="@color/gray_800"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"/>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_shimmer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <View
                    android:id="@+id/iv_photo_shimmer_background"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/background_white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    style="@style/TextLabel"
                    android:id="@+id/tv_name_shimmer_background"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="24dp"
                    android:background="@drawable/background_white"
                    app:layout_constraintTop_toBottomOf="@id/iv_photo_shimmer_background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    style="@style/TextSmall"
                    android:id="@+id/tv_email_shimmer_background"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginHorizontal="24dp"
                    android:background="@drawable/background_white"
                    app:layout_constraintTop_toBottomOf="@id/tv_name_shimmer_background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_total_point_shimmer_background"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="6dp"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="10dp"
                    android:background="@drawable/background_white"
                    app:layout_constraintTop_toBottomOf="@id/tv_email_shimmer_background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cl_total_medal_shimmer_background">
                    <TextView
                        style="@style/TextSmall"
                        android:id="@+id/tv_total_point_shimmer_background"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                    <TextView
                        style="@style/TextLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_total_point_shimmer_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_total_medal_shimmer_background"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="24dp"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="10dp"
                    android:background="@drawable/background_white"
                    app:layout_constraintTop_toBottomOf="@id/tv_email_shimmer_background"
                    app:layout_constraintStart_toEndOf="@id/cl_total_point_shimmer_background"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        style="@style/TextSmall"
                        android:id="@+id/tv_total_medal_shimmer_background"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                    <TextView
                        style="@style/TextLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_total_medal_shimmer_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    style="@style/TextLabel"
                    android:id="@+id/tv_label_achievement_shimmer_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="24dp"
                    android:text="@string/achievement"
                    android:textColor="@color/white"
                    android:background="@drawable/background_white"
                    app:layout_constraintTop_toBottomOf="@id/cl_total_point_shimmer_background"
                    app:layout_constraintStart_toStartOf="parent" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_label_achievement_shimmer_background">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/background_white" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/background_white" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/background_white" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/iv_photo_shimmer"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/background_gray_500"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        style="@style/TextLabel"
                        android:id="@+id/tv_name_shimmer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="24dp"
                        android:background="@drawable/background_gray_500"
                        app:layout_constraintTop_toBottomOf="@id/iv_photo_shimmer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        style="@style/TextSmall"
                        android:id="@+id/tv_email_shimmer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginHorizontal="24dp"
                        android:background="@drawable/background_gray_500"
                        app:layout_constraintTop_toBottomOf="@id/tv_name_shimmer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_total_point_shimmer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="6dp"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="10dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_email_shimmer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/cl_total_medal_shimmer">
                        <include layout="@layout/card_total_shimmer" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_total_medal_shimmer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="24dp"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="10dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_email_shimmer"
                        app:layout_constraintStart_toEndOf="@id/cl_total_point_shimmer"
                        app:layout_constraintEnd_toEndOf="parent">
                        <include layout="@layout/card_total_shimmer" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        style="@style/TextLabel"
                        android:id="@+id/tv_label_achievement_shimmer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="24dp"
                        android:text="@string/achievement"
                        android:textColor="@color/gray_500"
                        android:background="@drawable/background_gray_500"
                        app:layout_constraintTop_toBottomOf="@id/cl_total_point_shimmer"
                        app:layout_constraintStart_toStartOf="parent" />
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginHorizontal="24dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/tv_label_achievement_shimmer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp">
                            <include layout="@layout/card_achievement_shimmer" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp">
                            <include layout="@layout/card_achievement_shimmer" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp">
                            <include layout="@layout/card_achievement_shimmer" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>