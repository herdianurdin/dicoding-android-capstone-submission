<resources>
    <!-- Base application theme. -->
    <style name="Theme.Gometry" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/purple_500</item>
        <item name="android:windowBackground">@color/gray_100</item>
    </style>
    <!-- Splash Theme -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar" >
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="android:navigationBarColor">@color/purple_500</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <!-- Auth Theme -->
    <style name="AuthTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="android:navigationBarColor">@color/purple_500</item>
        <item name="android:windowBackground">@color/purple_500</item>
    </style>
    <!-- Text Style -->
    <style name="TextRegular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="TextSmall" parent="TextRegular">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text" parent="TextRegular">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextBig" parent="TextRegular">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextCaptionBig" parent="TextRegular">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextBold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name="TextSmallBold" parent="TextBold">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextNormalBold" parent="TextBold">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextBigBold" parent="TextBold">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextLabel" parent="TextBold">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextSubHeading" parent="TextBold">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TextHeading" parent="TextBold">
        <item name="android:textSize">32sp</item>
    </style>
</resources>